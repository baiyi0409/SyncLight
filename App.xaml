<Application
    x:Class="SyncLight.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SyncLight.Converters"
    xmlns:local="clr-namespace:SyncLight"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="/Controls/LightEffectsListBoxItem/LightEffectsListBoxItem.xaml" />
                <ResourceDictionary Source="/Controls/LightEffectColorsListBoxItem/LightEffectColorsListBoxItem.xaml" />
                <ResourceDictionary Source="/Controls/SyncSnackbar/SyncSnackbar.xaml" />
                <ResourceDictionary Source="/Controls/SyncTabItem/SyncTabItem.xaml" />
                <ResourceDictionary Source="/Controls/SyncTabControl/SyncTabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="TabViewBorderBrush" Color="Transparent" />

            <converters:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <converters:ColorToSolidColorBrushConverter x:Key="ColorToSolidColorBrushConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
