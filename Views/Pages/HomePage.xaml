<UserControl
    x:Class="SyncLight.Views.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enums="clr-namespace:SyncLight.Enums"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:SyncLight.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:SyncLight.ViewModels.Home"
    d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid Margin="10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="10,8"
                    FontSize="18"
                    Foreground="{DynamicResource CardForeground}"
                    Text="设备设置" />

                <UniformGrid
                    Grid.Row="1"
                    Columns="2"
                    Rows="1">
                    <Border
                        Margin="10"
                        Padding="20,15"
                        Background="{DynamicResource CardBackground}"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                FontSize="18"
                                Foreground="{DynamicResource CardForeground}"
                                Text="设备状态" />

                            <StackPanel Grid.Row="1">
                                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                                    <Border
                                        Width="10"
                                        Height="10"
                                        CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Dev_IsOpen}" Value="True">
                                                        <Setter Property="Background" Value="Green" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontSize="16"
                                        Foreground="{DynamicResource CardForeground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="USB 未连接" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Dev_IsOpen}" Value="True">
                                                        <Setter Property="Text" Value="USB 已连接" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Margin="0,12,0,0" Orientation="Horizontal">
                                    <Border
                                        Width="10"
                                        Height="10"
                                        CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Dev_IsOpen}" Value="True">
                                                        <Setter Property="Background" Value="Green" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        FontSize="16"
                                        Foreground="{DynamicResource CardForeground}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="电源 未连接" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Dev_IsOpen}" Value="True">
                                                        <Setter Property="Text" Value="电源 已连接" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <ui:ToggleSwitch
                                Grid.Row="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Command="{Binding SwitchAdaLightCommand}"
                                IsChecked="{Binding Dev_IsOpen}" />

                            <ui:SymbolIcon
                                Grid.RowSpan="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="72"
                                Foreground="{DynamicResource CardForeground}"
                                Symbol="TvUsb48" />
                        </Grid>
                    </Border>

                    <Border
                        Margin="10"
                        Padding="20,15"
                        Background="{DynamicResource CardBackground}"
                        CornerRadius="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                FontSize="18"
                                Foreground="{DynamicResource CardForeground}"
                                Text="通信设置" />

                            <StackPanel
                                Grid.Row="1"
                                Margin="0,20,0,0"
                                Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{DynamicResource CardForeground}"
                                        Text="COM端口" />
                                    <ui:TextBox
                                        Margin="10,0,0,0"
                                        IsEnabled="False"
                                        Text="{Binding Dev_Port}" />
                                </StackPanel>

                                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{DynamicResource CardForeground}"
                                        Text="波特率" />
                                    <ui:TextBox
                                        Margin="10,0,0,0"
                                        IsEnabled="False"
                                        Text="{Binding Dev_BaudRate}" />
                                </StackPanel>
                            </StackPanel>

                            <Button
                                Grid.Row="3"
                                Width="32"
                                Height="32"
                                Padding="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                BorderThickness="0">
                                <ui:SymbolIcon FontSize="24" Symbol="MoreVertical20" />
                            </Button>

                            <ui:SymbolIcon
                                Grid.RowSpan="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                FontSize="72"
                                Foreground="{DynamicResource CardForeground}"
                                Symbol="BranchCompare24" />
                        </Grid>
                    </Border>
                </UniformGrid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="10,8"
                    FontSize="18"
                    Foreground="{DynamicResource CardForeground}"
                    Text="追光设置" />

                <UniformGrid
                    Grid.Row="1"
                    Columns="4"
                    Rows="1">

                    <Grid Margin="10">
                        <Border
                            Padding="15,20"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="追光模式" />

                                <Button
                                    x:Name="EdgeButton"
                                    Grid.Row="1"
                                    Width="65"
                                    Height="65"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="EdgeButton_Click">
                                    <ui:SymbolIcon FontSize="32" Symbol="DesktopPulse24" />
                                </Button>

                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    DockPanel.Dock="Bottom"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="{Binding SelectedEdgeDisplayText}" />
                            </Grid>
                        </Border>

                        <Border Margin="0,0,0,-5">
                            <ui:Flyout x:Name="EdgeFlyout" Placement="Bottom">
                                <StackPanel>
                                    <RadioButton Content="三边" IsChecked="{Binding SelectedEdge, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:EdgeEnum.ThreeSides}}" />
                                    <RadioButton Content="四边" IsChecked="{Binding SelectedEdge, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:EdgeEnum.FourSides}}" />
                                </StackPanel>
                            </ui:Flyout>
                        </Border>
                    </Grid>

                    <Grid Margin="10">
                        <Border
                            Padding="15,20"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="粘贴方向" />

                                <Button
                                    x:Name="DirectionButton"
                                    Grid.Row="1"
                                    Width="65"
                                    Height="65"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="DirectionButton_Click">
                                    <ui:SymbolIcon FontSize="32" Symbol="BorderNone24" />
                                </Button>

                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    DockPanel.Dock="Bottom"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="{Binding SelectedDirectionDisplayText}" />
                            </Grid>
                        </Border>

                        <Border Margin="0,0,0,-5">
                            <ui:Flyout x:Name="DirectionFlyout" Placement="Bottom">
                                <StackPanel>
                                    <RadioButton Content="从左到右" IsChecked="{Binding SelectedDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:DirectionEnum.LeftToRight}}" />
                                    <RadioButton Content="从右到左" IsChecked="{Binding SelectedDirection, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static enums:DirectionEnum.RightToLeft}}" />
                                </StackPanel>
                            </ui:Flyout>
                        </Border>
                    </Grid>

                    <Grid Margin="10">
                        <Border
                            Padding="15,20"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="灯珠数量" />

                                <Button
                                    x:Name="AmountButton"
                                    Grid.Row="1"
                                    Width="65"
                                    Height="65"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="AmountButton_Click">
                                    <ui:SymbolIcon FontSize="32" Symbol="LightbulbCircle24" />
                                </Button>

                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    DockPanel.Dock="Bottom"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="{Binding ElementName=AmountNumber, Path=Value}" />
                            </Grid>
                        </Border>

                        <Border Margin="0,0,0,-5">
                            <ui:Flyout x:Name="AmountFlyout" Placement="Bottom">
                                <ui:NumberBox
                                    x:Name="AmountNumber"
                                    MinWidth="150"
                                    Minimum="0"
                                    Value="{Binding LightAmount}" />
                            </ui:Flyout>
                        </Border>
                    </Grid>

                    <Grid Margin="10">
                        <Border
                            Padding="15,20"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="追光屏幕" />

                                <Button
                                    x:Name="ScreenButton"
                                    Grid.Row="1"
                                    Width="65"
                                    Height="65"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Click="ScreenButton_Click">
                                    <ui:SymbolIcon FontSize="32" Symbol="DesktopCursor24" />
                                </Button>

                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    DockPanel.Dock="Bottom"
                                    FontSize="16"
                                    Foreground="{DynamicResource CardForeground}"
                                    Text="{Binding ElementName=ScreenComboBox, Path=SelectedItem.DisplayName}" />
                            </Grid>
                        </Border>

                        <Border Margin="0,0,0,-5">
                            <ui:Flyout x:Name="ScreenFlyout" Placement="Bottom">
                                <ComboBox
                                    x:Name="ScreenComboBox"
                                    MinWidth="165"
                                    ItemsSource="{Binding AllScreens}"
                                    SelectedItem="{Binding SelectedScreen, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding DisplayName}" />
                                                <TextBlock
                                                    Margin="0,2,0,0"
                                                    FontSize="12"
                                                    Text="{Binding Resolution}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </ui:Flyout>
                        </Border>
                    </Grid>
                </UniformGrid>
            </Grid>

            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="10,8"
                    FontSize="18"
                    Foreground="{DynamicResource CardForeground}"
                    Text="辅助设置" />

                <ScrollViewer Grid.Row="1">
                    <StackPanel
                        Margin="0,0,10,0"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Border
                            Width="220"
                            Height="100"
                            Margin="10"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16" />
                        <Border
                            Width="220"
                            Height="100"
                            Margin="10"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16" />
                        <Border
                            Width="220"
                            Height="100"
                            Margin="10"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="16" />
                        <Border
                            Width="250"
                            Height="100"
                            Margin="10"
                            Background="{DynamicResource CardBackground}" />
                        <Border
                            Width="250"
                            Height="100"
                            Margin="10"
                            Background="{DynamicResource CardBackground}" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="6*" />
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>


            <TextBlock
                Margin="10,8"
                FontSize="18"
                Foreground="{DynamicResource CardForeground}"
                Text="灯效设置" />

            <!--  背景  -->
            <Border
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,10,10,20"
                Background="{DynamicResource CardBackground}"
                CornerRadius="16" />

            <ListBox
                Grid.Row="1"
                Margin="20,20,20,10"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ItemContainerStyle="{StaticResource LightEffectsListBoxItemStyle}"
                ItemsSource="{Binding LightEffects}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding GetEmbeddedLightEffectCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ui:SymbolIcon
                                Grid.Column="0"
                                FontSize="24"
                                Foreground="{DynamicResource CardForeground}"
                                Symbol="{Binding Icon}" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="16"
                                Foreground="{DynamicResource CardForeground}"
                                Text="{Binding Name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Border
                Grid.Row="2"
                Margin="20,0,20,30"
                Padding="12"
                Background="{DynamicResource ApplicationBackgroundBrush}"
                BorderThickness="0"
                CornerRadius="16"
                Visibility="{Binding LightEffect_BorderIsVisible}">
                <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=OneWay}" Style="{StaticResource SyncTabControlStyle}">

                    <TabItem Style="{StaticResource SyncTabItemStyle}">
                        <TextBlock Text="0" />
                    </TabItem>

                    <TabItem>
                        <TextBlock Text="1" />
                    </TabItem>

                    <TabItem>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ItemsControl
                                Grid.Row="0"
                                d:ItemsSource="{d:SampleData ItemCount=5}"
                                ItemsSource="{Binding LightEffectColors}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="32"
                                            Height="32"
                                            Margin="5"
                                            Background="{Binding Color, Converter={StaticResource ColorToSolidColorBrushConverter}}"
                                            BorderBrush="{DynamicResource ListViewItemBackgroundPointerOver}"
                                            BorderThickness="5"
                                            CornerRadius="16">
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Grid Grid.Row="1">
                                <TextBox Text="" />
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
